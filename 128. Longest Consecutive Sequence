class Solution(object):
    def longestConsecutive(self, nums):
        """
        :type nums: List[int]
        :rtype: int
        """
        if not nums:
            return 0

        num_set = set(nums)
        longest_sub = 1

        for num in num_set:
            if num - 1 in num_set:
                # if there's a smaller number, then this num is not the start of a sequence
                continue
            else:
                current_num = num
                current_sub = 1
                while current_num + 1 in num_set:
                    current_num += 1
                    current_sub += 1

                longest_sub = max(longest_sub, current_sub)

        return longest_sub
        
